---
import cards from "../content/cards.json";
---

<div>
	<h1>Stack de tecnolog√≠a</h1>
	<div class="tech__cards">
		{cards.map((card) => (
			<a class="tech__card" href={card.href} target="_blank">
				<img src={card.imgSrc} alt={card.altText}>
			</a>
		))}
	</div>
</div>

<style>

	h1{
		text-align: center;
		margin: 4rem 0;
	}

	.tech__cards {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		row-gap: 2rem;
		margin: 3rem 0;
	}

	.tech__card{
		display: flex;
		justify-content: center;
	}

	.tech__card img {
		max-width: 80px;
		max-height: 80px;
	}
</style>